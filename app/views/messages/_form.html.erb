<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <P>name</P>
  <%= f.text_field :name %>
  
  <p>age</p>
  <%= f.text_field :age %>

   <p>内容</p>
  <%= f.text_area :body %>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>